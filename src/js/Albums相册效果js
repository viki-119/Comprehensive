<script>
	function chpic(index){
	var pics=["","1","2","3","4"];
	var bigpic=document.getElementsByTagName("p")[0].children[0];
	bigpic.src=pics[index] +".jpg";
	}
	
</script>

<style type="text/css">   
	p body ul li img{padding:0px;}
	ul li{list-style:none;float:left;}
	p img{margin-left:60px;}
</style>
